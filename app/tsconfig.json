{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2015.promise"
    ],
    "sourceMap": true,
    "outDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceRoot": "./",
  }
}